{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src", "pages", "next-env.d.ts", "vitest.config.ts"],
  "exclude": ["node_modules", ".next"]
}
